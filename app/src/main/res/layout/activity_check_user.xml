<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mine.mychatapplication.CheckUserActivity"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/NationalIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/IDHnt"
        android:inputType="number"
        android:layout_marginBottom="@android:dimen/notification_large_icon_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp" />


    <Button
        android:id="@+id/ActivateButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="center"
        android:onClick="setActivation"
        android:text="@string/Activate"
        android:textColor="#9f9f93"
        android:layout_alignTop="@+id/NationalIdEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />
</RelativeLayout>
